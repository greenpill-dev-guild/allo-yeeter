{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",
    "types": [],
    "typeRoots": ["./src"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/*",
    "src/test-utils.tsx",
    "**/*.css"
  ]
}
