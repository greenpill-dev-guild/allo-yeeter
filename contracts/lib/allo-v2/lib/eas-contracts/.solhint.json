{
  "extends": "solhint:recommended",
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "not-rely-on-time": "off",
    "no-empty-blocks": "off",
    "mark-callable-contracts": "off",
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "func-named-parameters": "off",
    "immutable-vars-naming": "off",
    "compiler-version": ["error", "^0.8.0"]
  }
}
